#include<bits/stdc++.h>
#include<cstdio>
#include <iostream> 
#define ll long long
using namespace std;

int main(){
    ios::sync_with_stdio(false);
    cin.tie(NULL);
    
    ll n;
    cin>>n;
    
    cout<<n<<" ";
    while(n!=1){
        if(n%2==0) n = n/2;
        
        else n = 3*n +1;
        
        cout<< n<<" ";
    }
    return 0;
}
