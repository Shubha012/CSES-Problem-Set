#include <iostream>
#include <vector>

#define ll long long
#define endl '\n'
#define MOD 1000000007

using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(NULL);
    
    int t;
    cin>>t;
    while(t--){
        int a, b;
        cin>>a>>b;
        
        if((2*a -b)<0|| (2*a-b)%3 || (2*b-a)<0 || (2*b-a)%3 ) cout<<"NO\n";
        else cout<<"YES\n";
    }
    return 0;
}
